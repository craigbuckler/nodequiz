<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title><%= title %></title>
  <link rel="stylesheet" media="all" href="/css/main.css">
  <meta name="viewport" content="width=device-width">
</head>
<body>

  <main>

    <h1><%= title %></h1>

    <section id="chat"></section>

    <form id="form" method="get" action="/chat/">
      <input type="text" id="name" placeholder="your name" title="your name" value="" maxlength="15" autocomplete="off" required />
      <input type="text" id="message" placeholder="your message" title="your message" maxlength="200" autocomplete="off" required />
      <button>SEND</button>
    </form>

  </main>

  <script type="module">
    window.cfg = {
      wsHost: '<%= wsHost %>'
    };
  </script>
  <script type="module" src="/js/main.js"></script>
</body>
</html>
