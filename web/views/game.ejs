<%- include('partials/_htmlhead'); -%>

<header>

  <h1 class="join">Waiting for other players&hellip;</h1>

  <h1 class="start">Starting quiz&hellip;</h1>

  <h1 class="questionactive">Question <span id="qnum">1</span> of <%= game.questions_asked %></h1>

</header>

<main>

  <article class="join">

    <p>Other players can join this quiz by loading <strong><%= domain %>/</strong> and entering the game code: <strong><%= slug %></strong></p>

  </article>

  <article class="questionactive">

    <p id="question"></p>
    <ol id="answers"></ol>

  </article>

  <article class="scoreboard join start">

    <h2>Players</h2>

    <table id="player"></table>

  </article>

  <button id="start" class="join">START QUIZ WITH <span id="pnum">0</span> PLAYERS</button>

  <svg id="timer" viewBox="0 0 100 100">
    <circle r="40" cx="50" cy="50" stroke-width="20" stroke-linecap="round"></circle>
  </svg>

</main>

<script type="module">
window.cfg = {
  wsDomain: '<%= wsDomain %>',
  gameId: <%= game.id %>,
  playerName: '<%= playerName %>'
};
</script>
<script type="module" src="/js/main.js"></script>

<%- include('partials/_htmlfoot'); -%>
